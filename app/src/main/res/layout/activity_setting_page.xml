<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    xmlns:android="http://schemas.android.com/apk/res/android" />

    <LinearLayout
        android:id="@+id/setting_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/little_dark"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="我的主队" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="账号安全" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="管理黑名单" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="2G/3G/4G网络为无图模式" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="传图时添加图片水印" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="推送通知" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="视频播放设置" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="清除缓存" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setting_page_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 MB"
                    android:textColor="#000" />

                <TextView
                    style="@style/setting_radio_button_setting_page_right_arrow"
                    android:layout_width="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="更多页面管理" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="启动APP时先显示的页面" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统默认"
                    android:textColor="#000" />

                <TextView
                    style="@style/setting_radio_button_setting_page_right_arrow"
                    android:layout_width="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="联系客服" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="意见反馈" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="给我们打分鼓励下吧" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="检测新版本" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/setting_radio_button_setting_page"
                android:text="关于我们" />

            <TextView style="@style/setting_radio_button_setting_page_right_arrow" />
        </LinearLayout>

        <Button
            android:id="@+id/quit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:background="@drawable/round_background"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#fff"
            android:visibility="invisible" />
    </LinearLayout>
</ScrollView>