<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miogk.myhupu.radiobutton.forumraduibutton.plate.buttonActivities.PostActivity">

    <include layout="@layout/title_bar" />

    <EditText
        android:id="@+id/activity_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="标题"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/activity_post_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="请输入内容"
        android:paddingLeft="10dp" />


    <Button
        android:id="@+id/activity_post_add_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入图片" />
</LinearLayout>
