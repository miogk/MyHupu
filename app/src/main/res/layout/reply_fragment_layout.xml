<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/reply_fragment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111-11-11" />

    <LinearLayout
        android:id="@+id/reply_fragment_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reply_fragment_time"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="引用 @" />

            <TextView
                android:id="@+id/reply_fragment_rusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="miooooogk"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 发表的" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/reply_fragment_rcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View view = View.inflate(ShihuhuContentActivity.this, R.layout.reply_content_layout, null);
            return view;" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/reply_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reply_fragment_reference"
        android:layout_marginTop="10dp"
        android:text="TextView t_username = (TextView) view.findViewById(R.id.reply_content_layout_username);
            TextView t_time = (TextView) view.findViewById(R.id.reply_content_layout_time);
            TextView t_content = (TextView) view.findViewById(R.id.reply_content_layout_content);"
        android:textColor="#000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reply_fragment_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自 : "
            android:textColor="#000" />

        <TextView
            android:id="@+id/reply_fragment_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11111"
            android:textColor="@color/blue" />
    </LinearLayout>
</RelativeLayout>